<script>
$(function () {
  $('[data-toggle="tooltip"]').tooltip()
})
</script>

<div class"container">
  <div class="row justify-content-center">
    <div class="col-sm-10">
    <%= form_tag root_path, method:"get", class:"form-inline" do%>
    <%= text_field_tag :search, params[:search], class:"form-control", placeholder:"Search by Title" %>

    <label class="ml-3">Filter: </label>
    <div class="btn-group btn-group-toggle ml-3" data-toggle="buttons">

      <label for="filter" class="btn btn-secondary">Popularity
        <%= radio_button_tag :filter, 'pop'%>
      </label>

      <label for="filter" class="btn btn-secondary">Date
        <%= radio_button_tag :filter, 'date'%>
      </label>


      <label for="filter" class="btn btn-secondary">ABC
        <%= radio_button_tag :filter, 'abc'%>
      </label>
    </div>

    <label class="ml-3">Order: </label>
    <div class="btn-group btn-group-toggle ml-3" data-toggle="buttons">

      <label for="order" class="btn btn-secondary">ASC
        <%= radio_button_tag :order, 'asc'%>
      </label>

      <label for="order" class="btn btn-secondary">DESC
        <%= radio_button_tag :order, 'desc'%>
      </label>
    </div>

    <%= submit_tag 'Search', name: nil, class:"btn btn-secondary ml-3" %>
    <% end %>
  </div>

  <!-- <div class="col">
    <%= link_to "Popularity", root_path(filter:"pop"),class:"btn btn-dark" %>
  </div> -->
  </div>
</div>
<hr>
<br>
<div class="container">
<div class="row">

  <% @current_posts.each do |post| %>
  <div class="col-4">
    <div class="thumb-post" data-toggle="tooltip" data-placement="bottom" title="<%= post.title %>   â™¥ <%= post.vote_count %>">
      <%= link_to(image_tag(post.image, class:"img-thumbnail bg-light"), post) %>
    </div>
  </div>
  <% end %>

</div>
</div>
<div class="container">
<% if @previous_page %>
<%= link_to "Previous Page", root_path(query: "#{@previous_page}"), class:"btn btn-outline-dark", role:"button" %>
<% end %>
<% if @next_page %>
<%= link_to "Next Page", root_path(query: "#{@next_page}"), class:"btn btn-outline-dark", role:"button" %>
<% end %>

</div>
